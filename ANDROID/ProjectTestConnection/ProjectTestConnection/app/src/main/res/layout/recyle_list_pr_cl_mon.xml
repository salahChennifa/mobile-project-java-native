<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/cardviewMonitorClts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--ImageVIew to display our Course Image-->
        <ImageView
            android:id="@+id/idIVcltsmonitor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            app:srcCompat="@drawable/person"
            tools:ignore="VectorDrawableCompat" />

        <!--Text View to display Course Name-->
        <TextView
            android:id="@+id/nameCltMonitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idIVcltsmonitor"
            android:layout_toRightOf="@id/idIVcltsmonitor"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--Text VIew to display COurse Rating-->
        <!--Image used in present in drawable folder-->
        <TextView
            android:id="@+id/phoneCltMonitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameCltMonitor"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/idIVcltsmonitor"
            android:layout_toRightOf="@id/idIVcltsmonitor"

            android:drawablePadding="2dp"
            android:text="phone" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>